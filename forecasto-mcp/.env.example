# Port for the MCP server HTTP listener
PORT=3100

# Forecasto REST API base URL
FORECASTO_API_URL=http://localhost:8000

# OAuth 2.0 client settings
OAUTH_CLIENT_ID=forecasto-mcp
# Local dev: callback served by MCP server directly
# Production: callback served via nginx reverse proxy on app.forecasto.it
OAUTH_REDIRECT_URI=http://localhost:3100/oauth/callback
# OAUTH_REDIRECT_URI=https://app.forecasto.it/oauth/callback

# Forecasto app base URL (where the OAuth authorize page is)
FORECASTO_APP_URL=http://localhost:8000
# FORECASTO_APP_URL=https://app.forecasto.it
